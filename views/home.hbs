                  </h6>
                  {{#if isDiscount}}
                  <h5>
                    <p class="card-title text-danger">{{Cource.discountPrice}} VND</p>
                  </h5>
                  <h6>
                    <p class="card-text text-muted">{{Cource.Price}} VND</p>
                  </h6>
                  {{else}}
                  <h6>
                    <p class="card-text">{{Cource.Price}} VND</p>
                  </h6>
                  {{/if}}
                  <a href="{{Cource.Link}}" class="btn btn-primary">Learn More</a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <!-- navigation buttons -->
      <a class="carousel-control-prev" href="#popular-courses" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#popular-courses" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- ======================================================== new courses ======================================================== -->
    <h2 class="text-center mt-5 mb-3">New Courses</h2>
    <div id="new-courses" class="carousel slide" data-ride="carousel">
      <!-- course items -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            {{#each newCourses}}
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <img src="{{Cource.Image}}" alt="{{Cource.Name}}" />
