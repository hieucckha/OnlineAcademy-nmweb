

<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Learning Platform</title>
  <!-- include Bootstrap CSS file -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
  <!-- include custom CSS file -->
  <link rel="stylesheet" href="style.css" />
</head>
<div style="margin-top:100px">
<body>
  <!-- ========================================================= navbar ========================================================= -->

  <!-- ========================================================= navbar ========================================================= -->
  <!-- header -->
<header class="header text-center">
    <h1 class="display-4">Welcome to Online Academy</h1>
    <p class="lead">Learn new skills and improve your knowledge with our
      high-quality online courses</p>
  </header>

  <!-- main content -->
  <main class="container">
    <!-- ======================================================== featured courses ======================================================== -->
    <h2 class="text-center mt-5 mb-3">Featured Courses</h2>
    <div id="featured-courses" class="carousel slide" data-ride="carousel">
      <!-- course items -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            {{#each featuredCourses}}
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <img src="{{Cource.Image}}" alt="{{Cource.Name}}" />
                <div class="card-body">
                  <h5 class="card-title">{{Cource.Name}}</h5>
                  <h6>
                    <p class="card-text">{{Cource.Category}}</p>
                    <p class="card-text">{{Cource.Teacher}}</p>
                    <p class="card-text">Rating : {{Cource.Rating}}/5</p>
                    <p class="card-text">Number of students : {{Cource.NumberOfStudents}}</p>
                  </h6>
                  {{#if isDiscount}}
                  <h5>
                    <p class="card-title text-danger">{{Cource.discountPrice}} VND</p>
                  </h5>
                  <h6>
                    <p class="card-text text-muted">{{Cource.Price}} VND</p>
                  </h6>
                  {{else}}
                  <h6>
                    <p class="card-text">{{Cource.Price}} VND</p>
                  </h6>
                  {{/if}}
                  <a href="{{Cource.Link}}" class="btn btn-primary">Learn More</a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <!-- navigation buttons -->
      <a class="carousel-control-prev" href="#featured-courses" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#featured-courses" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- ======================================================== popular courses ======================================================== -->
    <h2 class="text-center mt-5 mb-3">Popular Courses</h2>
    <div id="popular-courses" class="carousel slide" data-ride="carousel">
      <!-- course items -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            {{#each popularCourses}}
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
