<div style="margin-top: 100px; margin-bottom: calc(100vh - 40%);">
    <h2 class="font-weight-bold font-italic">Profiles and settings</h2>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/teacher/edit">Profiles<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/teacher/edit/avt">Avatar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Setting</a>
                </li>
            </ul>
        </div>
    </nav>
    <form style="margin-left: 100px">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputFirstName">First Name</label>
                <input type="email" class="form-control" id="inputFirstName" placeholder={{account.FirstName}}>
            </div>
            <div class="form-group col-md-6">
                <label for="inputWebsite">Website</label>
                <input type="text" class="form-control" id="inputWebsite" placeholder={{account.Website}}>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputLastname">Last Name</label>
                <input type="text" class="form-control" id="inputLastname" placeholder={{account.LastName}}>
            </div>
            <div class="form-group col-md-6">
                <label for="inputPhonenum">Phone number</label>
                <input type="text" class="form-control" id="inputPhonenum" placeholder={{account.Phone}}>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCaption">Caption</label>
                <input type="text" class="form-control" id="inputCaption" placeholder={{account.Caption}}>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputBiography">Biography</label>
                <input type="text" class="form-control" id="inputBiography" placeholder={{account.Biography}}>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputLanguage">Language</label>
                <input type="text" class="form-control" id="inputLanguage" placeholder={{account.Language}}>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>