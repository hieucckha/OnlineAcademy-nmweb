<section id="profile">
    <div class="container">
        <div class="left-container">
            <img src="/{{this.user.avatar}}" class="profile-img"><br>
            <button class="btn-change-img">Change Image &nbsp;&nbsp;<i class="bi bi-pencil"></i></button>
            <h1 class="username">{{authUser.firstName}} {{authUser.lastName}}</h1>
        </div>
        <div class="right-container">
            <div class="leftbox">
                <nav>
                    <a class="tab active" onclick="tabs(0)">
                        <i class="bi bi-person-fill"></i>
                    </a>
                    <a class="tab" onclick="tabs(1)">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                </nav>
            </div>
            <div class="rightbox">
                <form class="profile tabShow" method="post" action="/account/editProfile">
                    <br>
                    <h1 class="info">Personal Info</h1>
                    {{#if err_message}}
                        <div class="alert alert-danger" role="alert">
                            {{err_message}}
                        </div>
                    {{/if}}
                    <h2>Email</h2>
                    <input type="text" name="email" class="input" value="{{authUser.email}}">

                    <h2>First name</h2>
                    <input type="text" name="firstName" class="input" value="{{authUser.firstName}}">

                    <h2>Last name</h2>
                    <input type="text" name="lastName" class="input" value="{{authUser.lastName}}">

                    <h2>Password</h2>
                    <input type="password" name="pass" class="input"><br>
                    <i class="notification">* Enter password to confirm the change</i>

                    <br>
                    <button class="btn-update" type="submit">Update</button>
                </form>
                <div class="change-password tabShow">
                    <br>
                    <h1>Change Password</h1>

                    <h2>Password</h2>
                    <input type="password" class="input" value="">

                    <h2> New Password</h2>
                    <input type="password" class="input" value="">

                    <h2>Confirm Password</h2>
                    <input type="password" class="input" value="">

                    <br>
                    <button class="btn-update" type="submit">Update</button>
                </div>
            </div>
        </div>
    </div>
</section>

{{#section 'js'}}
    <script>
        const tabBtn = document.querySelectorAll(".tab");
        const tab = document.querySelectorAll(".tabShow");

        function tabs(panelIndex) {
            tab.forEach(function(node) {
                node.style.display = "none";
            });
            tab[panelIndex].style.display = "block";
        }
        tabs(0);
    </script>
    <script>
        $(".tab").click(function() {
            $(this).addClass("active").siblings().removeClass("active");
        })
    </script>
{{/section}}