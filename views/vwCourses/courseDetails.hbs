<section id="course-details">
    {{#each this.course}}
        <div class="header">
            <h1 class="course-title">Course Details:</h1>
            <h3></h3>
        </div>
        <div class="container">
            <div class="list-container">
                <div class="course-list">
                    <a href="/courses/watchVideos"><img src="{{image}}" class="thumbnail"></a>
                    <div class="course-info">
                            <a href="/courses/watchVideos" class="course-name">{{title}}</a>
                            <p class="teacher-name">Teacher name</p>
                    </div>
                    <div class="flex-div">
                        <p class="avg-rating">{{rating}}</p>
                        <div id="rating">
                            <div class="star-rating">
                                <input type="radio" name="rate" id="rate-5">
                                <label for="rate-5" class="fa fa-star"></label>
                                <input type="radio" name="rate" id="rate-4">
                                <label for="rate-4" class="fa fa-star"></label>
                                <input type="radio" name="rate" id="rate-3">
                                <label for="rate-3" class="fa fa-star"></label>
                                <input type="radio" name="rate" id="rate-2">
                                <label for="rate-2" class="fa fa-star"></label>
                                <input type="radio" name="rate" id="rate-1">
                                <label for="rate-1" class="fa fa-star"></label>        
                            </div>
                        </div>
                        <span class="num-of-ratings">({{numRating}})</span>
                    </div>
                    <div class="price-of-course">
                        <div class="promotional-price">{{format_number discount}}đ &nbsp;</div>
                        <del class="price">{{format_number price}}đ</del>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</section>

